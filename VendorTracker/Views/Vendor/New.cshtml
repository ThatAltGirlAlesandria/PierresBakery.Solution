@{
  Layout = "_Layout";
}

<h1>Add a vendor:</h1>
<div>
  <form action="/vendor" method="post">
  <label for="vendorName">Vendor Name:</label>
  <input id="vendorName" name="vendorName" type="text" required>
  <label for="vendorDescription">Description of the vendor (ex: cafe, bookstore, etc...): </label>
  <input id="vendorDescription" name="vendorDescription" type="text" required>
  <button type="submit">Add vendor to list.</button>
  </form>
</div>
<div>
  <p><a href="/">Home</a></p>
  <p><a href="/vendor">Back to list of vendors.</a></p>
</div>