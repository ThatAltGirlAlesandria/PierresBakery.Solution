@{
  Layout = "_Layout";
}

<h1>Add a vendor:</h1>
<div>
  <form action="/vendor" method="post">
  <label for="name">Vendor Name:</label>
  <input id="name" name="name" type="text" required>
  <label for="description">Description of the vendor (ex: cafe, bookstore, etc...): </label>
  <input id="description" name="description" type="text" required>
  <button type="submit">Add vendor to list.</button>
  </form>
</div>
<div>
  <p><a href="/">Home</a></p>
  <p><a href="/vendor">Back to list of vendors.</a></p>
</div>